{
  "name": "acquisitions",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "imports": {
    "#src/*": "./src/*",
    "#config/*": "./src/config/*",
    "#controllers/*": "./src/controllers/*",
    "#middleware/*": "./src/middleware/*",
    "#models/*": "./src/models/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#utils/*": "./src/utils/*",
    "#validations/*": "./src/validations/*"
  },
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db.studio": "drizzle-kit studio",
    "dev:docker": "sh ./scripts/dev.sh",
    "prod:docker": "sh ./scripts/prod.sh",
    "test": "set NODE_OPTIONS=--experimental-vm-modules && jest",
    "test:unix": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "set NODE_OPTIONS=--experimental-vm-modules && jest --coverage",
    "test:coverage:unix": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "set NODE_OPTIONS=--experimental-vm-modules && jest --watch",
    "coverage:open": "start coverage/lcov-report/index.html",
    "coverage:clean": "rmdir /s /q coverage 2>nul || echo Coverage folder cleaned"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Abhay-0103/acquisitions.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Abhay-0103/acquisitions/issues"
  },
  "homepage": "https://github.com/Abhay-0103/acquisitions#readme",
  "dependencies": {
    "@arcjet/inspect": "^1.0.0-beta.12",
    "@arcjet/node": "^1.0.0-beta.12",
    "@neondatabase/serverless": "^1.0.1",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  }
}
